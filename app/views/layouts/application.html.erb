<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="application.scss">
  </head>
  <body>
    <header>
      <div clss="container" style="padding-bottom:60px;">
      <div class="row">
          <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: black;">
            <div class="container-fluid">
              <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="navbar-header">
                     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                    <h2 style="color:white;">Bookers</h2>
                  </div>
                  <div class="collapse navbar-collapse" id="navbarEexample1">
                    <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                      <li class="action">
                        <%= link_to "Home", user_path(current_user), class:"glyphicon glyphicon-home" %>
                      </li>
                      <li class="action">
                        <%= link_to "Users", users_path, class:"glyphicon glyphicon-user" %>
                      </li>
                      <li class="action">
                        <%= link_to "Books", books_path,class:"glyphicon glyphicon-book" %>
                      </li>
                      <li class="action">
                        <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-book"%>
                      </li>
                    <% else %>
                      <li class="action">
                        <%= link_to "Home", '/', class: "glyphicon glyphicon-home" %>
                      </li>
                      <li class="action">
                        <%= link_to "About", home_about_path,class:"glyphicon glyphicon-link" %>
                      </li>
                      <li class="action">
                        <%= link_to "sign up", new_user_registration_path,class:"glyphicon glyphicon-edit" %>
                      </li>
                      <li class="action">
                        <%= link_to "login", new_user_session_path,class:"glyphicon glyphicon-log-in"%>
                      </li>
                    <% end %>
                </ul>
              </div>
            </div>
         </nav>
        </div>
        <div class="col-lg-1"></div>
        <div>
    </header>
    <%= render 'layouts/flash' %>
    <!-- /header -->
    <%= yield %>
    <footer>
      <div class="container">
      <div class="row">
        <div class="col-lg-8"></div>
      <div class="col-lg-2">
        <p class="text-right">CopyRight Infratop.inc</p>
      </div>
      <div class="col-lg-2"></div>
    </div>
    </footer>
  </body>
</html>
