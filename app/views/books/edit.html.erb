<div class="container">
<div class="row">
	<div class="col-lg-1"></div>
	<div class="col-lg-10">
		<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
					<div id="error_explanation">
						<h4 class="text-danger"><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
						<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li class="text-danger"><%= message %></li>
					    <% end %>
						</ul>
					</div>
			<% end %>
			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<%= f.submit "Update Book", class:"btn btn-default" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			<span>|</span>
			<%= link_to "Back", books_path %>
	</div>

	<div class="col-lg-1"></div>
</div>
</div>