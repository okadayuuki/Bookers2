<h1>Books</h1>
<table>
	<tr>
		<th class="user"></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<%= @books.each do |book| %>
	<tr>
		<td>user</td>
		<td><%= link_to book.title, book_path(book.id)  %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h4><%= @book.errors.count %>件のエラーが発生しました。</h4>
			<ul>
			<%= @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
		    <% end %>
			</ul>
		</div>
	<% end %>
	 <p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_area :body %>
	<%= f.submit "Create book" %>
<% end %>

