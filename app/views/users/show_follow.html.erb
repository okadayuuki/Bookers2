<div class="container">
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<h1>Follow Users</h1>
			<% if @users.exists? %>
				<% @users.each do |user| %>
					<table class="table table-striped">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><%=attachment_image_tag user, :profile_image, :fill,30,30, format:'jpeg', fallback:'no_image.jpg'%>
								</td>
								<td><%= user.name %></td>
								<td>フォロー数：<%= user.followings.count %></td>
								<td>フォロワー数：<%= user.followers.count %></td>
								<td><%= link_to 'show', user_path(user.id) %></td>
							</tr>
						</tbody>
					</table>
				<% end %>
			<% else %>
				<p>ユーザーはいません</p>
			<% end %>
		</div>
	</div>
</div>